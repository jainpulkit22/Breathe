<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Recipient Form</h1>
        <div style="width:30%; margin:2% auto">
            <form action="/recipients" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="userID" placeholder="UserID" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Blood_Grp" placeholder="Blood Group of Recipient" required>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="Organ" placeholder="Required Organ" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="city" placeholder="City of Recipient" required> 
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="city" placeholder="License Number of Reffered doctor" required> 
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <label style="font-weight: normal;">Upload Report : </label>
                    <input type="file" onchange="load(event)" style="float: right;">
                    <img id="x">
                    <script>
                      var load = function(event) {
                        var x = document.getElementById('x');
                        x.src = URL.createObjectURL(event.target.files[0]);
                      };
                    </script>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>    
                </div>
            </form>
            
        </div>
    </div>
</div>
<% include partials/footer %>
