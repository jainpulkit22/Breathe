<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Donor Form</h1>
        <div style="width:30%; margin:2% auto">
            <form action="/donors" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name" required>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="userID" placeholder="userID" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>    
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="Blood_Grp" placeholder="Blood Group of Donor" required>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="dob" placeholder="DOB of Donor" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                  <input list="organs" name="organs" multiple size="6" placeholder="Select organ" class="form-control">
                  <datalist id="organs">
                    <option value="Eye">
                    <option value="Skin">
                    <option value="Tissue">
                    <option value="Liver">
                    <option value="Kidney">
                    <option value="Heart">
                    <option value="Pancreas">
                  </datalist>
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="city" placeholder="City of Donor" required>    
                </div>
                <div class="form=group" style="padding-bottom:4%;">
                    <input type="text" class="form-control" name="contact_no" placeholder="Contact Number " required>    
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>    
                </div>
            </form>
            
        <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>